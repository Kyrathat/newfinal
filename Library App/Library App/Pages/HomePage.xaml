<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:Library_App.Models.ViewModel"
             x:Class="Library_App.Pages.HomePage"
             Title="HomePage"
             x:DataType="vm:BookViewModel">

    <VerticalStackLayout Spacing="20">

        <!-- Title Field -->
        <Entry Placeholder="Search by Title"
               Text="{Binding TitleQuery}"
               TextColor="Black"
               BackgroundColor="White"
               HeightRequest="45"/>

        <!-- Author Field -->
        <Entry Placeholder="Search by Author"
               Text="{Binding AuthorQuery}"
               TextColor="Black"
               BackgroundColor="White"
               HeightRequest="45"/>

        <!-- Genre Field -->
        <Entry Placeholder="Search by Genre"
               Text="{Binding GenreQuery}"
               TextColor="Black"
               BackgroundColor="White"
               HeightRequest="45"/>

        <!-- ISBN Field -->
        <Entry Placeholder="Search by ISBN"
               Text="{Binding ISBNQuery}"
               TextColor="Black"
               BackgroundColor="White"
               HeightRequest="45"/>

        <!-- Date Released Field -->
        <Entry Placeholder="Search by Date Released (e.g., 2021)"
               Text="{Binding DateReleasedQuery}"
               TextColor="Black"
               BackgroundColor="White"
               HeightRequest="45"/>

        <!-- Search Button -->
        <Button Text="Search"
            BackgroundColor="#007BFF"
            TextColor="White"
            CornerRadius="5"
            HeightRequest="50"
            Clicked="OnSearchButtonClicked" />
        
        <!-- Create Book Button -->
        <Button Text="Create"
                BackgroundColor="#007BFF"
                TextColor="White"
                CornerRadius="5"
                HeightRequest="50"
                Clicked="OnCreateBookButtonClicked"
            />
    </VerticalStackLayout>
</ContentPage>
