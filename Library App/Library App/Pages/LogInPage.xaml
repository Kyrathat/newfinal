<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Library_App.Pages.LogInPage"
             Title="LogInPage"
             xmlns:vm="clr-namespace:Library_App.Models.ViewModel"
             x:DataType="vm:UserViewModel">
    
    <TableView Intent="Form">
        <TableRoot>
            <TableSection Title="LogIn">
                <TextCell Text="UserName"/>
                <EntryCell Placeholder="UserName..." BindingContext="{Binding UserName}"/>
                <TextCell Text="Password" />
                <EntryCell Placeholder="********" BindingContext="{Binding Password}" />
            </TableSection>
        </TableRoot>
    </TableView>
</ContentPage>