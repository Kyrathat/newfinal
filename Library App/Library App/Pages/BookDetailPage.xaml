<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Library_App.Pages.BookDetailPage"
             Title="Book Details">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="15">

            <Label Text="{Binding Title}" FontSize="24" FontAttributes="Bold" />
            <Label Text="Author:" FontAttributes="Bold" />
            <Label Text="{Binding Author}" FontSize="18" />

            <Label Text="Genre:" FontAttributes="Bold" />
            <Label Text="{Binding Genre}" FontSize="18" />

            <Label Text="ISBN:" FontAttributes="Bold" />
            <Label Text="{Binding ISBN}" FontSize="18" />

            <Label Text="Date Released:" FontAttributes="Bold" />
            <Label Text="{Binding DateReleased}" FontSize="18" />

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
